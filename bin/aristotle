#!/usr/bin/env php
<?php

use PrinsFrank\Aristotle\Commands\CreateConclusionCommand;
use PrinsFrank\Aristotle\Commands\CreatePremiseCommand;
use PrinsFrank\Aristotle\Configuration;
use Symfony\Component\Console\Application;

include $_composer_autoload_path ?? __DIR__ . '/../vendor/autoload.php';

$configuration = new Configuration(
    getenv('ARISTOTLE_ROOT_FOLDER') ?: dirname(__DIR__),
    getenv('ARISTOTLE_ROOT_FILE_NAME') ?: 'aristotle.adrl',
);

$application = new Application();
$application->addCommands([
    new CreateConclusionCommand($configuration),
    new CreatePremiseCommand($configuration),
]);

$application->run();
